<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userDongtaiLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="2dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/userSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/userKind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userSpeak"
            android:layout_marginTop="20dp"
            android:background="#00ff00" />

        <TextView
            android:id="@+id/user_standardTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/userpinglunCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80444444"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="0" />

        <ImageView
            android:id="@+id/pinglunImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/dish_comment_reply_5_night"
            android:layout_toLeftOf="@id/userpinglunCounts" />

        <TextView
            android:id="@+id/userzanCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:textColor="#80444444"
            android:layout_toLeftOf="@id/pinglunImg" />

        <ImageView
            android:id="@+id/zanImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/dish_comment_unzan_5_night"
            android:layout_toLeftOf="@id/userzanCounts" />
    </RelativeLayout>
</LinearLayout>